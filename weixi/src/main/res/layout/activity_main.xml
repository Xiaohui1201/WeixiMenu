<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/icon"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:onClick="btnMenu"
            />
    <ImageView
            android:id="@+id/iv_item1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@mipmap/icon1"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="25dp"
            android:visibility="invisible"
            />
    <ImageView
            android:id="@+id/iv_item2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@mipmap/icon2"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="25dp"
            android:visibility="invisible"
            />
    <ImageView
            android:id="@+id/iv_item3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@mipmap/icon3"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="25dp"
            android:visibility="invisible"
            />
    <ImageView
            android:id="@+id/iv_item4"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@mipmap/icon4"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="25dp"
            android:visibility="invisible"
            />


</RelativeLayout>
